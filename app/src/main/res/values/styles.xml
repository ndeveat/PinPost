<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pinpost</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/pinpost</item>
    </style>

    <style name="NoTitleNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainThemeColor" parent="NoTitleNoActionBar">

    </style>

    <style name="MainTheme" parent="MainThemeColor">

    </style>

    <style name="SplashTheme" parent="NoTitleNoActionBar">
        <item name="colorPrimaryDark">@color/pinpost</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PinPostToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="PushButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/pinpost</item>
    </style>

</resources>